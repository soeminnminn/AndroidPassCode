<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top Line -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff2e2e2e" />
        </shape>
    </item>
    <item android:top="0.5dip">
        <shape android:shape="rectangle">
            <solid android:color="#ff282828" />
        </shape>
    </item>
    <!-- Bottom Line -->
    <item android:top="6dip">
        <shape android:shape="rectangle">
            <solid android:color="#ff1b1b1b" />
        </shape>
    </item>
    <item android:bottom="2dip">
        <shape android:shape="rectangle">
            <solid android:color="#ff1f1f1f" />
        </shape>
    </item>
    <!-- Main Color -->
    <item android:top="1dip" android:bottom="3dip" >
        <shape android:shape="rectangle">
            <solid android:color="#ff222222" />
        </shape>
    </item>
</layer-list>
