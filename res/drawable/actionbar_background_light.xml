<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top Line -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffe0e0e0" />
        </shape>
    </item>
    <item android:top="0.5dip">
        <shape android:shape="rectangle">
            <solid android:color="#ffdfdfdf" />
        </shape>
    </item>
    <!-- Bottom Line -->
    <item android:top="6dip">
        <shape android:shape="rectangle">
            <solid android:color="#ffd2d2d2" />
        </shape>
    </item>
    <item android:top="6dip" android:bottom="2dip">
        <shape android:shape="rectangle">
            <solid android:color="#ffd8d8d8" />
        </shape>
    </item>
    <!-- Main Color -->
    <item android:top="1dip" android:bottom="3dip" >
        <shape android:shape="rectangle">
            <solid android:color="#ffdddddd" />
        </shape>
    </item>
</layer-list>
